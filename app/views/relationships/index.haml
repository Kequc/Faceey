- title "Sharing"
- panel @profile, 'relationships'

- if @relationships.length > 0
  #profiles.page_split
    - @relationships.each do |relationship|
      .split.shared{:id => "relationship_#{relationship._id}", :class => cycle("new_row", nil)}
        = stream_picture(relationship, :thumb, false)
        %a.relationship.content{:href => profile_path(relationship)}
          %p= name_title(relationship)
- else
  = display_empty
